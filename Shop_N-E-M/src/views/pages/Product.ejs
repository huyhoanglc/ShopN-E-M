<!-- search -->
<section id="subscribe" class="container-grid padding-large position-relative overflow-hidden">
  <div class="container">
    <div class="row">
      <div class="subscribe-content bg-dark d-flex flex-wrap justify-content-center align-items-center padding-medium">
        <div class="col-md-6 col-sm-12">
          <div class="display-header pe-3">
            <h2 class="display-7 text-uppercase text-light">Ne-Shop</h2>
            <p style="color: #fff;">Hệ thống bán lẻ điện thoại chính hãng uy tín nhất Việt Nam</p>
          </div>
        </div>
        <div class="col-md-5 col-sm-12">
          <form class="subscription-form validate" action="/product" method="post">
            <div class="input-group flex-wrap">
              <input class="form-control btn-rounded-none" type="searchValue" name="searchValue"
                placeholder="Bạn cần tìm gì ?">
              <button class="btn btn-medium btn-primary text-uppercase btn-rounded-none" type="submit"
                name="subscribe">Search</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Thanh điều hướng -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav" style="display: flex; justify-content: space-between; width: 100%; font-size: 18px;">
        <% brands.map(brand=> { %>
          <li class="nav-item"><a class="nav-link" href="/product/brand/<%= brand._id%>">
              <%= brand.name %>
            </a></li>
          <% }) %>
            <!-- Thêm các mục khác tương tự -->
      </ul>
    </div>
  </div>
</nav>
<!-- Sắp xếp -->
<div class="container mt-4">
  <div class="row">
    <div class="col-md-3">
      <label for="sortPrice" class="form-label">Sắp xếp theo giá</label>
      <select class="form-select" id="sapxeptheogia">
        <option value="low-high">Giá thấp - Cao</option>
        <option value="high-low">Giá cao - Thấp</option>
        <option value="khuyenmai">Khuyến mãi hot</option>
        <option value="xemnhieu">Xem nhiều</option>
      </select>
    </div>
    <div class="col-md-3">
      <label for="priceRange" class="form-label">Chọn theo nhu cầu</label>
      <select class="form-select" id="chontheonhucau">
        <option value="choigame">Chơi Game</option>
        <option value="dienthoaigap">Điện thoại gập</option>
        <option value="chupanhdep">Chụp ảnh đẹp</option>
        <option value="livestream">Livestream</option>
        <option value="dungluonglon">Dung lượng lớn</option>
        <option value="pintrau">Pin trâu</option>
        <option value="cauhinhcao">Cấu hình cao</option>
        <option value="dienthoaiai">Điện thoại AI</option>
        <option value="dtphothong">Điện thoại phổ thông</option>
      </select>
    </div>
    <div class="col-md-3">
      <label for="priceRange" class="form-label">Khoảng giá</label>
      <select class="form-select" id="khoanggia">
        <option value="0-5">0 - 5 triệu</option>
        <option value="5-10">5 - 10 triệu</option>
        <option value="10-15">10 - 15 triệu</option>
        <option value="15-20">15 - 20 triệu</option>
        <option value="tren20">trên 20 triệu</option>
      </select>
    </div>
    <div class="col-md-3">
      <label for="priceRange" class="form-label">Tình trạng máy</label>
      <select class="form-select" id="tinhtrangmay">
        <option value="zin">Hàng mới zin 100%</option>
        <option value="99%">Hàng 99% như mới</option>
        <option value="98%">Hàng 98% chỉ hơi xước nhẹ</option>
      </select>
    </div>
  </div>
</div>
<main>
  <div class="product-container">
    <% products.forEach(product=> { %>
      <div class="product-card">
        <% if (product.image) { %>
          <div class="product-image-wrapper">
            <a href="/product/<%= product._id %>">
              <img src="/upload/<%= product.image %>" alt="<%= product.name %>" class="product-image">
            </a>
          </div>
          <% } %>
            <div class="product-details">
              <a href="/product/<%= product._id %>">
                <h3>
                  <%= product.name %>
                </h3>
              </a>

              <p><strong>Price:</strong>
                <%= product.price.toLocaleString('vi-VN', { style: 'currency' , currency: 'VND' }) %>
              </p>
            </div>
      </div>
      <% }) %>
  </div>
</main>


<style>
  /* quan */
  #subscribe {
    padding-top: 10px;
    padding-bottom: 30px;
  }

  main {
    padding: 20px;
  }

  .product-container {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 20px;
  }

  .product-card {
    display: flex;
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    background-color: #fff;
    width: 30%;
    max-width: 500px;
    /* Tăng kích thước tối đa của khung sản phẩm */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    /* Thêm hiệu ứng bóng để làm nổi bật sản phẩm */
  }

  .product-image-wrapper {
    flex: 1;
    max-width: 250px;
    /* Tăng kích thước tối đa của hình ảnh */
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .product-details {
    flex: 2;
    padding: 20px;
    /* Tăng padding */
    font-size: 1rem;
    /* Tăng kích thước font */
    display: flex;
    flex-direction: column;
    justify-content: center;
    /* Căn giữa nội dung */
  }

  .product-details h3 {
    margin: 0 0 12px;
    /* Tăng margin dưới tiêu đề */
    font-size: 1.2rem;
    /* Tăng kích thước font tiêu đề */
  }

  .product-details p {
    margin: 6px 0;
    /* Tăng margin của các đoạn văn */
    line-height: 1.5;
    /* Tăng khoảng cách giữa các dòng để dễ đọc hơn */
  }
</style>